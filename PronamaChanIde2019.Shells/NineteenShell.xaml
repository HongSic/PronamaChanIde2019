<UserControl
    x:Class="PronamaChanIde2019.Shells.NineteenShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <Grid>
        <Image
            x:Name="BodyImage"
            VerticalAlignment="Top"
            RenderOptions.BitmapScalingMode="HighQuality"
            Source="Images/Nineteen/Body2.png" />
        <Image
            x:Name="HandLeftImage"
            Width="{Binding ElementName=BodyImage, Path=ActualWidth}"
            VerticalAlignment="Top"
            RenderOptions.BitmapScalingMode="HighQuality"
            Source="Images/Nineteen/HandLeft2.png" />
        <Image
            x:Name="HandRightImage"
            Width="{Binding ElementName=BodyImage, Path=ActualWidth}"
            VerticalAlignment="Top"
            RenderOptions.BitmapScalingMode="HighQuality"
            Source="Images/Nineteen/HandRight2.png" />
        <Image
            x:Name="FaceImage"
            Width="{Binding ElementName=BodyImage, Path=ActualWidth}"
            VerticalAlignment="Top"
            RenderOptions.BitmapScalingMode="HighQuality"
            Source="Images/Nineteen/Blink1.png" />
    </Grid>

</UserControl>
